#include <stdio.h>
// Declaração de variaveis
char NOME;
double sF, vendas, TOTAL;
main(){
// Atribuição de valores a suas variaveis
    scanf("%s", &NOME);
    scanf("%lf", &sF);
    scanf("%lf", &vendas);
    // adcionando 15% de aumento
    TOTAL = (vendas * 15) / 100;
    // total + salario fixo
    TOTAL = TOTAL + sF;
    // exibindo o tatol
    printf("TOTAL = R$ %.02lf\n", TOTAL);
  
    return 0;
}
